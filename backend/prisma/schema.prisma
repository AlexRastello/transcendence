generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
	id Int @id @default(autoincrement())
	createdAt DateTime @default(now())
	id_user Int @unique
	email String
	login String @unique
	first_name String
	last_name String
	img_link String
	kind String @default("")
	status Int @default(0)
	notification Notification[]
	block_id Int[]
	friend_id Int[]
	req_received_friend Int[]
	req_send_friend Int[]
	RoomToUser RoomToUser[]
	Message Message[]
	twoFaSecret String @default("")
	twoFaEnabled Boolean @default(false)
	twoFaAuth Boolean @default(false)
}

model Room {
	id          Int    @id @default(autoincrement())
	name        String @unique
	description String @default("")
	status      String
	password    String @default("")

	RoomToUser RoomToUser[]
	Message Message[]
}

model RoomToUser {
	id      Int  @id @default(autoincrement())
	room    Room @relation(fields: [id_room], references: [id])
	id_room Int
	user    User @relation(fields: [id_user], references: [id_user])
	id_user Int

	owner Boolean @default(false)
	admin Boolean @default(false)
}


model Message {
	id Int @id @default(autoincrement())
	content String
	createdAt DateTime @default(now())
	room Room @relation(fields: [id_room], references: [id])
	id_room Int
	user User @relation(fields: [id_user], references: [id_user])
	id_user Int
}

model Notification {
  id Int @id @default(autoincrement())
  user  User @relation(fields: [id_user_receive], references: [id])
  id_user_receive Int
  id_user_send Int
  is_read Boolean @default(false)
  login_send String
  img_link String
  type Int
}