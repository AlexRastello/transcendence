generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
	id Int @id @default(autoincrement())
	createdAt DateTime @default(now())
	id_user Int @unique
	email String
	login String @unique
	first_name String
	last_name String
	img_link String
	activity Int @default(0)
	exp Int @default(0)
	level Int @default(0)
	ranking Int @default(0)
	winrate Float @default(0)
	lp Int @default(0)
	notification Notification[]
	block_id Int[]
	friend_id Int[]
	req_received_friend Int[]
	req_send_friend Int[]
	RoomToUser RoomToUser[]
	Message MessageRoom[]
	twoFaSecret String @default("")
	twoFaEnabled Boolean @default(false)
	twoFaAuth Boolean @default(false)
	banned Banned[]
	roomMp RoomMessagePrivate[] @relation("RoomUserMessagePrivate")
}

model Room {
	id          Int    @id @default(autoincrement())
	name        String @unique
	description String @default("")
	status      String
	password    String @default("")

	// banned_id Int[]
	banned Banned[]

	RoomToUser RoomToUser[]
	Message MessageRoom[]
}

model Banned {
	id Int @id @default(autoincrement())
	room Room @relation(fields: [id_room], references: [id])
	id_room Int
	user User @relation(fields: [id_user], references: [id_user])
	id_user Int

	endBan DateTime
}

model RoomToUser {
	id      Int  @id @default(autoincrement())
	room    Room @relation(fields: [id_room], references: [id])
	id_room Int
	user    User @relation(fields: [id_user], references: [id_user])
	id_user Int

	owner Boolean @default(false)
	admin Boolean @default(false)
	Muted Boolean @default(false)
	EndMute DateTime @default(now())
}

model MessageRoom {
	id Int @id @default(autoincrement())
	content String
	createdAt DateTime @default(now())
	room Room @relation(fields: [id_room], references: [id])
	id_room Int
	user User @relation(fields: [id_user], references: [id_user])
	id_user Int
}

model RoomMessagePrivate {
	id Int @id @default(autoincrement())
	createdAt DateTime @default(now())
	user User[] @relation("RoomUserMessagePrivate")
	id_user1 Int
	id_user2 Int
	mp MessagePrivate[]
	open_id  Int[]
}

model MessagePrivate {
	id Int @id @default(autoincrement())
	content String
	room RoomMessagePrivate @relation(fields: [id_room], references: [id])
	id_room Int
	id_user_send Int
	is_updated Boolean @default(false)
	is_read Boolean @default(false)
	createdAt DateTime @default(now())
}

model Notification {
  id Int @id @default(autoincrement())
  user  User @relation(fields: [id_user_receive], references: [id])
  id_user_receive Int
  id_user_send Int
  is_read Boolean @default(false)
  login_send String
  img_link String
  type Int
}